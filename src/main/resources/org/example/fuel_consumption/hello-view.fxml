<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.fuel_consumption.HelloController">
    <Label fx:id="distanceLabel" text="Distance (km)" />
    <TextField fx:id="distanceField" prefWidth="200"/>

    <Label text="Fuel Used (liters)" fx:id="fuelUsedLabel"/>
    <TextField fx:id="fuelUsedField"  prefWidth="200"/>
    <Label text="Result:" fx:id="resultLabel" />
    <Button text="Calculate" fx:id="calculateButton" onAction="#calculateFuelConsumption"/>

    <!-- Language Buttons -->
    <Button fx:id="enButton" onAction="#switchToEnglish" text="EN"/>
    <Button fx:id="frButton" onAction="#switchToFrench" text="FR"/>
    <Button fx:id="jpButton" onAction="#switchToJapanese" text="JP"/>
    <Button fx:id="irButton" onAction="#switchToPersian" text="IR" />
</VBox>